<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="AloisJasa\DeviceManager\Domain\Device\Device" table="device_manager_device">
        <id name="id" type="deviceManager.device.deviceId"/>
        <field name="hostname" type="string"/>
        <field name="type" type="string" enum-type="AloisJasa\DeviceManager\Domain\Device\DeviceType"/>
        <field name="os" type="string" enum-type="AloisJasa\DeviceManager\Domain\Device\DeviceOS"/>
        <many-to-one
                field="owner"
                target-entity="AloisJasa\DeviceManager\Domain\User\User"
        >
            <join-column name="owner_id" nullable="false" />
        </many-to-one>
    </entity>
</doctrine-mapping>
