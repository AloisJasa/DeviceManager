{
	"name": "aloisjasa/device-manager-monorepo",
	"description": "Device Manager",
	"license": "MIT",
	"authors": [
		{
			"name": "Alois Ja≈°a",
			"email": "aloisjasa@gmail.com"
		}
	],
	"prefer-stable": true,
	"require": {
		"php": "^8.3",
		"ext-pgsql": "*",
		"contributte/console": "^0.10.1",
		"happyr/doctrine-specification": "^2.1",
		"nette/bootstrap": "^3.2",
		"nette/di": "^3.2",
		"nette/utils": "^4.0",
		"nettrine/migrations": "^0.10.0",
		"nettrine/orm": "^0.9.0",
		"ramsey/uuid": "^4.9",
		"tracy/tracy": "^2.10"
	},
	"require-dev": {
		"phpstan/phpstan": "^2.1",
		"phpstan/phpstan-doctrine": "^2.0",
		"phpstan/phpstan-nette": "^2.0",
		"phpstan/phpstan-phpunit": "^2.0",
		"phpstan/phpstan-strict-rules": "^2.0",
		"phpunit/phpunit": "^10.5",
		"shipmonk/phpstan-rules": "^4.1",
		"slevomat/coding-standard": "^8.15"
	},
	"autoload": {
		"psr-4": {
			"AloisJasa\\DeviceManager\\": "packages/device-manager/src/",
			"AloisJasa\\DeviceManagerSDK\\": "packages/device-manager-sdk/src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"AloisJasa\\DeviceManager\\Tests\\": "packages/device-manager/tests/",
			"AloisJasa\\DeviceManagerSDK\\Tests\\": "packages/device-manager-sdk/tests/"
		}
	},
	"replace": {
		"aloisjasa/device-manager": "self.version",
		"aloisjasa/device-manager-sdk": "self.version"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"sort-packages": true
	}
}
